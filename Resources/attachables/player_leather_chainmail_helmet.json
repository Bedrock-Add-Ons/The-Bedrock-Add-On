{
	"format_version": "1.20.50",
	"minecraft:attachable": {
		"description": {
			"identifier": "minecraft:chainmail_helmet.player",
			"item": { "minecraft:chainmail_helmet": "query.owner_identifier == 'minecraft:player'" },

			"textures": { "default": "textures/models/armor/leather_chainmail_primary", "enchanted": "textures/misc/enchanted_actor_glint" },
			"geometry": { "default": "geometry.player.armor.helmet" },
			"materials": { "default": "armor", "enchanted": "armor_enchanted" },
			"render_controllers": [ "controller.render.armor" ],

			"animations": { "offset": "animation.armor.helmet.offset" },
			"scripts": {
				"parent_setup": "variable.helmet_layer_visible = 0.0;",
				"animate": [ "offset" ]
			}
		}
	}
}
